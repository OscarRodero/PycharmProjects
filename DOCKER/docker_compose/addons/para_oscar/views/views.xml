<odoo>
  <data>
    <!-- Vista tree para Producto -->
    <record model="ir.ui.view" id="para_oscar.producto_tree_view">
      <field name="name">producto.tree</field>
      <field name="model">para_oscar.producto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="price"/>
          <field name="stock"/>
          <field name="tags"/>
          <field name="caducity"/>
          <field name="category_id"/>
          <field name="expiration_criticality"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Producto -->
    <record model="ir.ui.view" id="para_oscar.producto_form_view">
      <field name="name">producto.form</field>
      <field name="model">para_oscar.producto</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="product_code" readonly="1"/>
              <field name="name"/>
              <field name="description"/>
              <field name="category_id"/>
              <field name="price"/>
              <field name="stock"/>
              <field name="caducity"/>
              <field name="expiration_criticality"/>     
              <field name="tags"/>              
              <field name="image"/>                       
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Categoria -->
    <record model="ir.ui.view" id="para_oscar.categoria_tree_view">
      <field name="name">categoria.tree</field>
      <field name="model">para_oscar.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Categoria -->
    <record model="ir.ui.view" id="para_oscar.categoria_form_view">
      <field name="name">categoria.form</field>
      <field name="model">para_oscar.categoria</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="code"/>
              <field name="products"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Etiqueta -->
    <record model="ir.ui.view" id="para_oscar.etiqueta_tree_view">
      <field name="name">etiqueta.tree</field>
      <field name="model">para_oscar.etiqueta</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Etiqueta -->
    <record model="ir.ui.view" id="para_oscar.etiqueta_form_view">
      <field name="name">etiqueta.form</field>
      <field name="model">para_oscar.etiqueta</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Lote -->
    <record model="ir.ui.view" id="para_oscar.lote_tree_view">
      <field name="name">lote.tree</field>
      <field name="model">para_oscar.lote</field>
      <field name="arch" type="xml">
        <tree>
          <field name="number"/>
          <field name="code"/>
          <field name="product_id"/>
          <field name="quantity"/>
          <field name="type"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Lote -->
    <record model="ir.ui.view" id="para_oscar.lote_form_view">
      <field name="name">lote.form</field>
      <field name="model">para_oscar.lote</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="number"/>
              <field name="code"/>
              <field name="product_id"/>
              <field name="quantity"/>
              <field name="type"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Almacen -->
    <record model="ir.ui.view" id="para_oscar.almacen_tree_view">
      <field name="name">almacen.tree</field>
      <field name="model">para_oscar.almacen</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="location"/>
          <field name="opening_time" widget="float_time"/>
          <field name="closing_time" widget="float_time"/>
          <field name="estanterias_ids"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Almacen -->
    <record model="ir.ui.view" id="para_oscar.almacen_form_view">
      <field name="name">almacen.form</field>
      <field name="model">para_oscar.almacen</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="location"/>
              <field name="opening_time" widget="float_time"/>
              <field name="closing_time" widget="float_time"/>              
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Estanteria -->
    <record model="ir.ui.view" id="para_oscar.estanteria_tree_view">
      <field name="name">estanteria.tree</field>
      <field name="model">para_oscar.estanteria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="codigo"/>
          <field name="almacen_id"/>
          <field name="lote_id"/>
          <field name="m3"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Estanteria -->
    <record model="ir.ui.view" id="para_oscar.estanteria_form_view">
      <field name="name">estanteria.form</field>
      <field name="model">para_oscar.estanteria</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="codigo"/>
              <field name="almacen_id"/>
              <field name="m3"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista tree para Entrega -->
    <record model="ir.ui.view" id="para_oscar.entrega_tree_view">
      <field name="name">entrega.tree</field>
      <field name="model">para_oscar.entrega</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha_hora_entrega"/>
          <field name="almacen_id"/>
          <field name="estanteria_id"/>
          <field name="lote_id"/>
        </tree>
      </field>
    </record>

    <!-- Vista form para Entrega -->
    <record model="ir.ui.view" id="para_oscar.entrega_form_view">
      <field name="name">entrega.form</field>
      <field name="model">para_oscar.entrega</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="fecha_hora_entrega"/>
              <field name="almacen_id"/>
              <field name="estanteria_id"/>
              <field name="lote_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Definición de acciones -->
    <record model="ir.actions.act_window" id="para_oscar.producto_action_window">
      <field name="name">Productos</field>
      <field name="res_model">para_oscar.producto</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.categoria_action_window">
      <field name="name">Categorías</field>
      <field name="res_model">para_oscar.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.etiqueta_action_window">
      <field name="name">Etiquetas</field>
      <field name="res_model">para_oscar.etiqueta</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.lote_action_window">
      <field name="name">Lotes</field>
      <field name="res_model">para_oscar.lote</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.almacen_action_window">
      <field name="name">Almacenes</field>
      <field name="res_model">para_oscar.almacen</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.entrega_action_window">
      <field name="name">Entregas</field>
      <field name="res_model">para_oscar.entrega</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="para_oscar.estanteria_action_window">
      <field name="name">Estanterías</field>
      <field name="res_model">para_oscar.estanteria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Elementos de menú -->
    <menuitem name="ParafarmaciaOscarRodero" id="para_oscar.menu_root"/>

    <menuitem name="Gestion" id="para_oscar.gestion" parent="para_oscar.menu_root"/>
    <menuitem name="Almacenaje" id="para_oscar.almacenaje" parent="para_oscar.menu_root"/>

    <menuitem name="Mis Productos" id="para_oscar.menu_1_list" parent="para_oscar.gestion"
              action="para_oscar.producto_action_window"/>
    <menuitem name="Mis Categorías" id="para_oscar.menu_2_list" parent="para_oscar.gestion"
              action="para_oscar.categoria_action_window"/>
    <menuitem name="Mis Etiquetas" id="para_oscar.menu_3_list" parent="para_oscar.gestion"
              action="para_oscar.etiqueta_action_window"/>
    <menuitem name="Mis Lotes" id="para_oscar.menu_4_list" parent="para_oscar.gestion"
              action="para_oscar.lote_action_window"/>
    <menuitem name="Mis Almacenes" id="para_oscar.menu_5_list" parent="para_oscar.almacenaje"
              action="para_oscar.almacen_action_window"/>
    <menuitem name="Mis Entregas" id="para_oscar.menu_6_list" parent="para_oscar.almacenaje"
              action="para_oscar.entrega_action_window"/>
    <menuitem name="Mis Estanterías" id="para_oscar.menu_7_list" parent="para_oscar.almacenaje"
              action="para_oscar.estanteria_action_window"/>          
  </data>
</odoo>
