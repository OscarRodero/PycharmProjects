    <!-- Top menu item -->
    <menuitem name="ParafarmaciaOscarRodero" id="para_oscar.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Productos" id="para_oscar.productos" parent="para_oscar.menu_root"/>
    <menuitem name="Categorías" id="para_oscar.categorias" parent="para_oscar.menu_root"/>
    <!-- actions -->
    <menuitem name="Mis Productos" id="para_oscar.menu_1_list" parent="para_oscar.productos"
              action="para_oscar.producto_action_window"/>
    <menuitem name="Mis Categorías" id="para_oscar" parent="para_oscar.categorias"
              action="para_oscar.categoria_action_window"/>
  </data>
</odoo>